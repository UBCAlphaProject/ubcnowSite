<h1 class="title-of-page form-page">Create</h1>

<%= form_for @blip , html: {class: 'form-horizontal'} do|f| %>

  <%= f.error_messages %>

  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:title].present? %> 
        <%= f.text_field :title, class: 'form-control error-red' %>
      <% else %>
        <%= f.text_field :title, class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :summary, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:summary].present? %>
        <%= f.text_area :summary, class: 'form-control error-red' %>
      <% else %>
        <%= f.text_area :summary, class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :link, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:link].present? %>
        <%= f.text_field :link, class: 'form-control error-red' %>
      <% else %>
        <%= f.text_field :link, class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :startTime, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:startTime].present? %>
        <%= f.datetime_select :startTime,  :include_blank => true , class: 'form-control error-red' %>
      <% else %>
        <%= f.datetime_select :startTime,  :include_blank => true , class: 'form-control' %>
      <% end %>  
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :endTime, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:endTime].present? %>
        <%= f.datetime_select :endTime,  :include_blank => true , class: 'form-control error-red' %>
      <% else %>
        <%= f.datetime_select :endTime,  :include_blank => true , class: 'form-control' %>
      <% end %>
    </div>
  </div>


  <div class="field form-group">
    <%= f.label :address, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:address].present? %>
        <%= f.text_field :address, class: 'form-control error-red' %>
      <% else %>
        <%= f.text_field :address, class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :lat, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:lat].present? %>
        <%= f.number_field :lat, :step => 'any',  class: 'form-control error-red' %>
      <% else %>
        <%= f.number_field :lat, :step => 'any',  class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :lng, class: 'col-sm-1 control-label' %>
    <div class="col-sm-10">
      <% if @blip.errors[:lng].present? %>
        <%= f.number_field :lng, :step => 'any',  class: 'form-control error-red' %>
      <% else %>
        <%= f.number_field :lng, :step => 'any',  class: 'form-control' %>
      <% end %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-1 col-sm-10">
        <%= button_tag(type: 'submit', class: "btn btn-success btn-lg") do %>
 			<i class="glyphicon glyphicon-ok"></i>&nbsp;Create Blip
  		<% end %>
    </div>
  </div>


<% end %>

<br />

<%= link_to root_path, class: "btn btn-primary btn-lg col-sm-offset-1" do%>
	<i class="glyphicon glyphicon-home"></i> &nbsp;Home
<% end %>

