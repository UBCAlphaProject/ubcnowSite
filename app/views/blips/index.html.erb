<h1 style="text-align:center; font-weight: bold;">Your Blips</h1>

<table class="table table-striped table-bordered table-condensed" style="table-layout: fixed; word-wrap: break-word;">
  <thead>
  <tr>
    <th class="col-md-2">Title</th>
    <th class="col-md-3">Summary</th>
    <th class="col-md-1">Link</th>
    <th class="col-md-1">Time</th>
    <th class="col-md-1">Address</th>
    <th class="col-md-1">Latitude</th>
    <th class="col-md-1">Longitude</th>
    <th class="col-md-2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% unless @blipsArray.empty? %>
      <% @blipsArray.each do |blipHash| %>
          <tr>
            <td><div style="height:60px; overflow:auto"><%= blipHash["title"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["summary"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["link"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["time"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["address"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["lat"]   %></div></td>
            <td><div style="height:60px; overflow:auto"><%= blipHash["lng"]   %></div></td>

            <td>
              <%= link_to "Show", {:action => "show" , :id => blipHash["id"]}, class: "btn btn-small" %>
              <%= link_to "Edit", {:action => "edit" , :id => blipHash["id"]}, class: "btn btn-small" %>
              <%= link_to "Delete", {:action => "destroy", :id => blipHash["id"]}, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-small" %>
            </td>
          </tr>
      <% end %>
  <% else %>
      <tr>
        <td colspan="0">Send your first blip!!!</td>
      </tr>
  <% end %>
  </tbody>

</table>

<div class="contextual">
  <%= link_to(new_blip_path, class: "btn btn-success btn-lg") do %>
      <i class="glyphicon glyphicon-plus"></i> &nbsp;New Blip
  <% end %>
</div>